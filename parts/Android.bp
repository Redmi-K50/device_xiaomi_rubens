android_app {
    name: "XiaomiParts",
    defaults: [
        "SettingsLibDefaults",
    ],

    srcs: ["src/**/*.java"],
    resource_dirs: ["res"],
    certificate: "platform",
    platform_apis: true,
    system_ext_specific: true,
    privileged: true,

    static_libs: [
        "androidx.core_core",
        "androidx.preference_preference",
        "org.lineageos.settings.resources",
        "SettingsLib",
    ],

    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },

    required: [
        "disp_feature"
    ]
}

cc_binary {
	name: "disp_feature",
	srcs: [
		"disp_feature.cpp",
	],
    header_libs: [
        "generated_kernel_headers",
    ],
}